-- name selection
ns_size = 5
ns_letters = "_abcdefghijklmnopqrstuvwxyz0123456789"
function start_name_select()
	ns_pos = 0
	ns_name = {}
	for i=0,ns_size-1 do
		ns_name[i] = 0
	end
	_update = ns_update
	_draw = ns_draw
end
function ns_update()
	if btnp(4) then
		-- Set tama name
		tm_name = ""
		for i=0,ns_size-1 do
			if ns_name[i] > 0 then
				tm_name = tm_name .. sub(ns_letters, ns_name[i]+1, ns_name[i]+1)
			end
		end
		_update = function() end
		_draw = function() end
	elseif btnp(0) then
		ns_pos -= 1
	elseif btnp(1) then
		ns_pos += 1
	elseif btnp(2) then
		ns_name[ns_pos] += 1
	elseif btnp(3) then
		ns_name[ns_pos] -= 1
	end
	ns_pos = (ns_pos+ns_size) % ns_size
	ns_name[ns_pos] = (ns_name[ns_pos]+#ns_letters) % #ns_letters
	frame += 1
end
function ns_draw()
	cls()
	-- add background here

	local name = ""
	for i=0,ns_size-1 do
		if i==ns_pos and (frame%16) < 8 then
			name = name .. (ns_name[i]>0 and "_" or " ")
		else
			name = name .. sub(ns_letters, ns_name[i]+1, ns_name[i]+1)
		end
	end

	print("choose a name:", 40, 50)
	print(name, 55, 60)
end

